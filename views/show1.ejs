  <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Styled Product Table</title>
  <style>
   
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
    }

    
    table {
      width: 80%;
      margin: 40px auto;
      border-collapse: collapse;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #ffffff;
    }

    
    th {
      background-color: #4CAF50;
      color: white;
      padding: 12px 15px;
      text-align: left;
      font-size: 1.1em;
      letter-spacing: 1px;
    }

  
    td {
      padding: 12px 15px;
      text-align: left;
      font-size: 1em;
      color: #555;
      border-bottom: 1px solid #f2f2f2;
    }

   
    tr:hover {
      background-color: #f1f1f1;
    }

   
    th:first-child {
      border-top-left-radius: 10px;
    }

   
    th:last-child {
      border-top-right-radius: 10px;
    }

   
    table {
      border-radius: 10px;
      overflow: hidden;
    }

    
    tr:nth-child(odd) {
      background-color: #fafafa;
    }

  
    table, th, td {
      border: 1px solid #ddd;
    }

    
    @media (max-width: 768px) {
      table {
        width: 95%;
      }
      th, td {
        padding: 10px;
      }
    }
  </style>
</head>
<body>

  <table>
    <thead>
      <tr>
        <th>PRODUCT ID</th>
        <th>PRODUCT NAME</th>
        <th>PRODUCT PRICE</th>
        <th>PRODUCT QUALITY</th>
      </tr>
    </thead>
    <tbody>
      <% results.forEach(function(n) { %>
      <tr>
        <td><%= n.productid %></td>
        <td><%= n.productname %></td>
        <td><%= n.productprice %></td>
        <td><%= n.productquality %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>
